<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.notesandpasswordmanager">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotesAndPasswordManager"
        tools:targetApi="31">
        <activity
            android:name=".ManagePasswords.PasswordDetails"
            android:exported="false"
            android:theme="@style/Theme.NotesAndPasswordManager.NoActionBar"/>
        <activity
            android:name=".ManagePasswords.EditPassword"
            android:exported="false"
            android:theme="@style/Theme.NotesAndPasswordManager.NoActionBar"/>
        <activity
            android:name=".ManagePasswords.AddPassword"
            android:exported="false"
            android:theme="@style/Theme.NotesAndPasswordManager.NoActionBar"/>
        <activity
            android:name=".ManagePasswords.PasswordMain"
            android:exported="false" />
        <activity
            android:name=".ManageNotes.NoteDetails"
            android:exported="false"
            android:theme="@style/Theme.NotesAndPasswordManager.NoActionBar" />
        <activity
            android:name=".ManageNotes.EditNote"
            android:exported="false"
            android:theme="@style/Theme.NotesAndPasswordManager.NoActionBar" />
        <activity
            android:name=".ManageNotes.AddNote"
            android:exported="false"
            android:theme="@style/Theme.NotesAndPasswordManager.NoActionBar" />
        <activity
            android:name=".ManageNotes.NotesMain"
            android:exported="false" />
        <activity
            android:name=".NotesAndPasswordMenu"
            android:exported="false" />
        <activity
            android:name=".Authentication.ForgotPassword"
            android:exported="false" />
        <activity
            android:name=".Authentication.SignUp"
            android:exported="false" />
        <activity
            android:name=".Authentication.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>